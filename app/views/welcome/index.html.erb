<% content_for(:title, "Contacts | Home") %>

<div class="container margin-top-2">
		<ul class="collection">
			<% @contacts.first(10).each do |contact| %>
			  <li class="collection-item">

					<div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= "#{contact['first_name']} #{contact['last_name']}" %></span>
              <p><%= "#{contact['phone_mobile_national']}" %></p>
            </div>
            <div class="card-action">
              <a href="<%= "/welcome/send_sms_message?id=#{contact['id']}"%>">Send SMS Message</a>
            </div>
          </div>
				</li>
			<% end %>
    </ul>
</div>


<ul class="pagination">
  <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
	<% (1..@total_pages).to_a.first(10).each do |page| %>
		<li class="<%= @current_page != page ? 'waves-effect' : 'active' %>"><a href="<%= "/?page=#{page}" %>"><%= page %></a></li>
	<% end %>
  <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
</ul>
